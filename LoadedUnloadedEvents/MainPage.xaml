<Page
    x:Class="LoadedUnloadedEvents.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:LoadedUnloadedEvents"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">

        <Button x:Name="_button" BorderBrush="Gray" BorderThickness="1" Tapped="ButtonTapped">Change Hierarchy</Button>
        
        <Grid x:Name="_redRect" Width="200" Height="200" Background="Red" Margin="50, 0, 0, 0"/>

        <Grid x:Name="_greenRect" Width="200" Height="200" Background="Green" Margin="50, 0, 0, 0"/>

        <TextBox x:Name="_textBlock" Width="200" Height="200" Margin="50,0,0,0" BorderBrush="Gray" BorderThickness="1" IsEnabled="False"/>
    </StackPanel>
</Page>
